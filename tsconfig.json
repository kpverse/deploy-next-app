{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "rootDir": "./src/",
        "moduleResolution": "node",
        "outDir": "./build/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
